{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@screens": ["./screens"],
            "@components": ["./components"],
            "@navigation": ["./navigation"],
            "@state": ["./state"],
            "@icons":["./assets/icons"],
            "@images":["./assets/images"],
            "@fonts": ["./assets/fonts"],
        },
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": [
            "es6"
        ],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext"
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ]
}